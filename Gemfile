# Specify the Ruby version
ruby '2.7.4'

# Jekyll gem
gem 'jekyll', '~> 4.3.2'

# Plugin for search functionality
gem 'jekyll-search-plugin'

# Optional: Commonly used Jekyll plugins
gem 'jekyll-paginate', '~> 1.1.0'         # Pagination for blog posts
gem 'jekyll-sitemap', '~> 1.4.0'          # Automatically generate a sitemap
gem 'jekyll-seo-tag', '~> 2.8.0'          # SEO optimization
gem 'jekyll-feed', '~> 0.16.0'            # RSS feed generation
gem 'jekyll-assets', '~> 3.0.12'          # Asset management

# Optional: GitHub Pages compatibility
group :jekyll_plugins do
  gem 'github-pages'                      # GitHub Pages compatibility
end

# Optional: Development and testing tools
gem 'webrick', '~> 1.7.0'                 # Required for local development in Ruby 3+
gem 'jekyll-admin', '~> 0.11.0'           # Admin interface for Jekyll
