{
  "type": "MessageCard",
  "@context": "http://schema.org/extensions",
  "summary": "Phoenix VC {{environment}} Deployment Notification",
  "themeColor": "{{color}}",
  "title": "{{title}}",
  "sections": [
    {
      "activityTitle": "Deployment to {{environment}} Completed",
      "activitySubtitle": "Deployed on branch: {{branch}}",
      "facts": [
        { "name": "Environment", "value": "{{environment}}" },
        { "name": "Location", "value": "{{location_code}}" },
        { "name": "Resource Group", "value": "{{resource_group}}" },
        { "name": "Site URL", "value": "{{deployment_url}}" },
        { "name": "Webhook URL", "value": "{{webhook_url}}" }
      ],
      "markdown": true
    }
  ],
  "potentialAction": [
    {
      "type": "OpenUri",
      "name": "View Site",
      "targets": [
        { "os": "default", "uri": "{{deployment_url}}" }
      ]
    },
    {
      "type": "OpenUri",
      "name": "Approve Production Deployment",
      "targets": [
        { "os": "default", "uri": "{{approval_url}}" }
      ]
    },
    {
      "type": "OpenUri",
      "name": "Rollback Deployment",
      "targets": [
        { "os": "default", "uri": "{{rollback_url}}" }
      ]
    }
  ],
  "text": "The deployment to {{environment}} has completed successfully. Please review the details above and take any necessary actions."
}
