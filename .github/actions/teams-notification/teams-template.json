{
  "type": "MessageCard",
  "@context": "http://schema.org/extensions",
  "summary": "Phoenix VC {{environment}} Deployment Notification",
  "themeColor": "{{color}}",
  "title": "{{title}}",
  "sections": [
    {
      "activityTitle": "Deployment to {{environment}} Succeeded",
      "activitySubtitle": "Branch: {{branch}}",
      "facts": [
        { "name": "Environment", "value": "{{environment}}" },
        { "name": "Location Code", "value": "{{location_code}}" },
        { "name": "Resource Group", "value": "{{resource_group}}" },
        { "name": "Deployment URL", "value": "{{deployment_url}}" }
      ],
      "markdown": true
    }
  ],
  "potentialAction": [
    {
      "type": "OpenUri",
      "name": "View {{environment}} Site",
      "targets": [
        { "os": "default", "uri": "{{deployment_url}}" }
      ]
    },
    {
      "type": "OpenUri",
      "name": "Approve for Production",
      "targets": [
        { "os": "default", "uri": "{{approval_url}}" }
      ]
    },
    {
      "type": "OpenUri",
      "name": "Rollback Deployment",
      "targets": [
        { "os": "default", "uri": "{{rollback_url}}" }
      ]
    }
  ],
  "text": "The {{environment}} deployment has completed successfully. Click a button below to take action."
}
