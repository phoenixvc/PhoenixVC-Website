{
  "name": "phoenixvc-modernized",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "prepare": "npx husky",
    "build:css": "tailwindcss build src/styles/globals.css -o dist/styles.css",
    "lint": "eslint --max-warnings=9999 \"apps/**/*.{js,jsx,ts,tsx}\" --config eslint.config.js --report-unused-disable-directives",
    "lint:fix": "eslint \"apps/**/*.{js,jsx,ts,tsx}\" --config eslint.config.js --fix",
    "lint:workspace": "npm run lint --workspace",
    "format": "prettier --write \"apps/**/*.{js,jsx,ts,tsx,css,html,md}\"",
    "format-check": "prettier --check . || exit 0",
    "web": "npm run dev --workspace=@phoenixvc/web",
    "design": "npm run dev --workspace=@phoenixvc/design-system",
    "build:web": "npm run build --workspace=@phoenixvc/web",
    "build:design": "npm run build --workspace=@phoenixvc/design-system",
    "type-check:web": "npm run type-check --workspace=@phoenixvc/web",
    "type-check:design": "npm run type-check --workspace=@phoenixvc/design-system",
    "docs": "poetry run docs",
    "status": "./git-tree-status.sh ./",
    "status:web": "./git-tree-status.sh apps/web",
    "status:design": "./git-tree-status.sh apps/design-system",
    "status:docs": "./git-tree-status.sh docs",
    "status:api": "./git-tree-status.sh apps/api",
    "setup:api": "bash .devcontainer/scripts/setup-functions.sh",
    "func:init": "cd apps/api && func init --worker-runtime node --language typescript",
    "func:new": "cd apps/api && func new --name sendContactEmail --template \"HTTP trigger\" --language typescript",
    "api": "cd apps/api && func start",
    "api:build": "cd apps/api && npm run build",
    "api:deploy": "TODO: cd apps/api && func azure functionapp publish phoenixvc-api",
    "test:teamswebhook": "cd tests\\teams-webhook && powershell -ExecutionPolicy Bypass -File test-teams-webhook.ps1",
    "test:teamswebhook:simple": "cd tests\\teams-webhook && powershell -ExecutionPolicy Bypass -File test-teams-webhook.ps1 -SimpleTest",
    "test:teamswebhook:messagecard": "cd tests\\teams-webhook && powershell -ExecutionPolicy Bypass -File test-teams-webhook.ps1 -PayloadFile messagecard-payload.json",
    "test:teamswebhook:bash": "cd tests/teams-webhook && bash test-teams-webhook.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@eslint/js": "^9.0.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "framer-motion": "^12.4.3",
    "glob": "^10.3.10",
    "globals": "^13.24.0",
    "husky": "^9.1.7",
    "package": "^1.0.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.3.3",
    "vite": "^6.2.0"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "poetry": "^0.6.29",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^7.2.0",
    "tailwind-merge": "^3.0.1"
  }
}
