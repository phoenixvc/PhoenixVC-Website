{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "target": "es2019",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": true
    },
    "include": [
      "src/**/*",
      "**/*.config.js",
      "**/*.config.ts",
      "host.json",
      "local.settings.json"
    ],
    "exclude": ["node_modules", "dist"]
  }
